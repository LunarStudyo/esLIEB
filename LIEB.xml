<theme>
    <formatVersion>3</formatVersion>

	<view name="system">
		<image name="background" extra="true">
			<tile>false</tile>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<path>./art/gamegirl.png</path>
		</image>

		<helpsystem name="help">
			<textColor>FF33AA</textColor>
			<iconColor>FF00AA</iconColor>
		</helpsystem>

		<image name="CenterFade" extra="true">
			<tile>false</tile>
			<size>1 0.5</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<path>./art/centerfade.png</path>
			<color>AA006650</color>
		</image>

		<image name="BottomBar" extra="true">
			<tile>false</tile>
			<size>1 0.065</size>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<path>./art/bottom.png</path>
			<color>FF00AAc0</color>
		</image>

		<image name="ControllerOverlay" extra="true">
			<color>FF00AAFF</color>
		</image>
	</view>

	<view name="basic">

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/gamegirl_nospacebook.png</path>
		</image>

		<textlist name="gamelist">
			<selectorColor>330033CC</selectorColor>
			<selectedColor>FF33AA</selectedColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.030</fontSize>
			<pos>0.001 0.168</pos>
			<size>0.480 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

		<image name="md_image_controller">
			<pos>0.634 0.41</pos> 
			<maxSize>0.075 0.1</maxSize>
			<origin>0.5 0.5</origin>
			<color>9999FF</color>
		</image>

		<image name="md_image_system">
			<pos>0.634 0.47</pos> 
			<maxSize>0.07 0.08</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<view name="detailed">

		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
