			<color>969696</color>
		</image>

		</view>

	<view name="basic, detailed">

		<helpsystem name="help">
			<textColor>FF33AA</textColor>
			<iconColor>FF33AA</iconColor>
		</helpsystem>

		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1.01</origin>
