			<path>./art/gamegirl_nospacebook.png</path>
		</image>

		<image name="md_image">
			<pos>0.633 0.430</pos> 
			<maxSize>0.083 0.18</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="md_description_image" extra="true">
			<tile>false</tile>
			<size>0.48 0.2</size>
			<pos>0.001 0.73</pos>
			<origin>0 0</origin>
			<path>./art/bottom.png</path>
			<color>FF00AAc0</color>
		</image>

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
