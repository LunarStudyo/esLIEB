		</text>

		<text name="md_players">
			<pos>0.897 0.115</pos>
			<size>0.02 0</size>
		</text>

		<text name="md_description">
			<color>9c9c9c</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0.46 0.16</size>
			<pos>0.015 0.746</pos>
		</text>

		<textlist name="gamelist">
			<selectorColor>330033CC</selectorColor>
			<selectedColor>FF33AA</selectedColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.001 0.168</pos>
			<size>0.48 0.55</size>
			<alignment>left</alignment>
			<horizontalMargin>0.02</horizontalMargin>
			<fontSize>0.03</fontSize>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

		<image name="md_hidden">
